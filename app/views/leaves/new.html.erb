<div class="col-md-6 col-md-offset-3">
<%= form_for @leave do |f| %>

  <div class="form-group">
  From date: <%= f.date_field :from_date,class:"form-control"  %>
</div>

    <div class="form-group">

  To date : <%= f.date_field :to_date,class:"form-control"  %>
    <div class="form-group">
  Reason : <%= f.text_area :reason,class:"form-control"  %>
</div>

    <div class="form-group">
	  <%= f.submit %>
	</div>
<% end %>